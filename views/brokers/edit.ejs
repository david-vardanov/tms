<% layout('layout.ejs') %>
<div class="container">
    <h1>Edit Broker</h1>
    <form action="/brokers/<%= broker._id %>?_method=PUT" method="POST">
        <!-- Name -->
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="broker[name]" value="<%= broker.name %>" required>
        </div>

        <!-- MC Number -->
        <div class="form-group">
            <label for="mcNumber">MC Number</label>
            <input type="text" class="form-control" id="mcNumber" name="broker[mcNumber]" value="<%= broker.mcNumber %>" required>
        </div>

        <!-- Email -->
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="broker[email]" value="<%= broker.email %>">
        </div>

        <!-- Phone -->
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" name="broker[phone]" value="<%= broker.phone %>">
        </div>

        <!-- Address -->
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="broker[address]" value="<%= broker.address %>">
        </div>

        <!-- Address 2 -->
        <div class="form-group">
            <label for="address2">Address 2</label>
            <input type="text" class="form-control" id="address2" name="broker[address2]" value="<%= broker.address2 %>">
        </div>

        <!-- ZIP Code -->
        <div class="form-group">
            <label for="zip">ZIP Code</label>
            <input type="text" class="form-control" id="zip" name="broker[zip]" value="<%= broker.zip %>">
        </div>

        <!-- State -->
        <div class="form-group">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" name="broker[state]" value="<%= broker.state %>">
        </div>

        <!-- City -->
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" name="broker[city]" value="<%= broker.city %>">
        </div>

        <!-- EIN Number -->
        <div class="form-group">
            <label for="einNumber">EIN Number</label>
            <input type="text" class="form-control" id="einNumber" name="broker[einNumber]" value="<%= broker.einNumber %>">
        </div>

        <!-- DOT Number -->
        <div class="form-group">
            <label for="dotNumber">DOT Number</label>
            <input type="text" class="form-control" id="dotNumber" name="broker[dotNumber]" value="<%= broker.dotNumber %>">
        </div>

        <!-- Status -->
        <div class="form-group">
            <label for="status">Status</label>
            <select class="form-control" id="status" name="broker[status]">
                <option value="Active" <%= broker.status === 'Active' ? 'selected' : '' %> >Active</option>
                <option value="Inactive" <%= broker.status === 'Inactive' ? 'selected' : '' %> >Inactive</option>
                <option value="Deactivated" <%= broker.status === 'Deactivated' ? 'selected' : '' %> >Deactivated</option>
                <option value="Pending" <%= broker.status === 'Pending' ? 'selected' : '' %> >Pending</option>
                <option value="inModeration" <%= broker.status === 'inModeration' ? 'selected' : '' %> >inModeration</option>
                <option value="Declined" <%= broker.status === 'Declined' ? 'selected' : '' %> >Declined</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Broker</button>
    </form>
</div>
