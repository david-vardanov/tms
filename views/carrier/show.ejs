
    
    <% layout('layout.ejs') %>
        <h5><%=carrier.name %> || MC#<%= carrier.mcNumber %></h5>
        
        <div class="row my-3">
          
          <!-- LEFT -->
          <div class="col-md-6 border rounded py-3">
            <ul style="list-style-type: none;">
            <h6 clas="text-muted">Business details</h6>
            <li>Phone: <%= carrier.phone %></li>
            <li>Email: <%= carrier.email %></li>
            <li>DOT: <%= carrier.dotNumber %></li>
            <li>EIN: <%= carrier.einNumber %></li>
            <li>Address: <%= carrier.address %></li>
            <% if(carrier.address2) {%> <li>Address2: <%= carrier.address2 %></li><% } %>
            <li>City: <%= carrier.city %></li>
            <li>State: <%= carrier.state %></li>
            <li>Zip: <%= carrier.zip %></li>
            <li>Invited by: <%= invite. %></li>
          </ul>
          </div>
        
          <!-- RIGHT -->
          <div class="col-md-6">
            <h3>Documents</h3>
            <% if (carrier.documents.length > 0) { %>
              <table>
                  <thead>
                      <tr>
                          <th>Document Type</th>
                          <th>Path</th>
                          <th>Expiration Date</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% carrier.documents.forEach(function(document) { %>
                          <tr>
                              <td><%= document.type %></td>
                              <td><%= document.path %></td>
                              <td><%= document.expirationDate ? document.expirationDate.toDateString() : 'N/A' %></td>
                              <td>
                                <a href="/carriers/<%= carrier.id %>/document/<%= encodeURIComponent(document.path) %>" target="_blank">Open</a>
                              </td>
                          </tr>
                      <% }); %>
                  </tbody>
              </table>
          <% } else { %>
              <p>No documents available.</p>
          <% } %>
      </body>
            </ul>
          </div>
        </div>
