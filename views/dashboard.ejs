<!-- Create a form for the agent to input the carrier's MC number and email -->
<form id="carrier-invite-form">
    <div class="form-group">
      <label for="carrier-mc-number">Carrier MC Number</label>
      <input type="text" class="form-control" id="carrier-mc-number" required>
    </div>
    <div class="form-group d-none" id="carrier-email-group">
      <label for="carrier-email">Carrier Email</label>
      <input type="email" class="form-control" id="carrier-email" required>
    </div>
    <button type="submit" class="btn btn-primary">Generate Link</button>
  </form>
  