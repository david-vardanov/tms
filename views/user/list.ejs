        <% layout('layout.ejs') %>
        <!-- <%- //include('../modals/userModal.ejs') %> -->
        <div class="container mt-4">
            <div class="row">
                <h2>User List</h2>
             <div class="col-md-3">
                <% if(user.role==="admin") { %><a class="btn btn-primary btn-sm mx-1" href="/users/new">Create User</a><% } %>
             </div>
                <!--users table -->
                <div class="row mt-4">
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
        
                        <th scope="col">Username Name</th>
                        <th scope="col">Email</th>
        
                        <th scope="col">Role</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%users.forEach(userItem => { %>
                        <tr>
                          
                          <td><%=userItem.username %></td>
                          <td><%=userItem.email %></td>
        

                          <td><%=userItem.role %></td>
                          <td>
                            <div class="row">
                              <div class="col-md-2">
                                <button class="btn btn-primary btn-sm view-button" data-id="<%=userItem._id %>">Show</button>
                              </div>
                              <div class="col-md-2"><% if(user.role==="admin" || "moderator") { %><a class="btn btn-primary btn-sm mx-1" href="/users/<%=userItem._id %>/edit"> Edit</a><% } %></div>
                              <div class="col-md-2">
                                <% if(user.role==="admin") { %>
                                  <form id="deleteUserForm">
                                    <input type="hidden" id="userId" value="<%=userItem._id %>">
                                    <button type="button" class="btn btn-danger btn-sm btn-delete-user" data-id="<%= userItem._id %>" >Delete</button>
                                  </form>
                                <% } %>
                              </div>
                            </div>
                            
                            
                            
                          </td>
                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
          <!-- Pagination -->
          <div class="row">
            <div class="col">
              <nav aria-label="Carriers pagination">
                <ul class="pagination">
                  <% pagesUsers.forEach(page => { %>
                    <li class="page-item <%= page.active ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= page.number %>"><%= page.number %></a>
                    </li>
                  <% }) %>
                </ul>
              </nav>
            </div>
          </div>
          
          </div> <!-- Close container -->
          
          